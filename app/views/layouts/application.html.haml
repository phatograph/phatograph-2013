!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "phatograph @ 2013"
    / %script(src='//use.typekit.net/lxv0fmz.js')
    / %script try{Typekit.load();}catch(e){}
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "application", :media => "all"
    / %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    / %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    / %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    / %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    - if Rails.env.production?
      %link(href="/assets/favicon.ico" rel="shortcut icon")

  %body
    .container(style='padding-top: 20px;')
      - [:notice, :error, :success, :info, :alert].each do |key|
        - if flash[key].present?
          %div{class: "alert alert-#{key}"}
            / %button{type: 'button', class:'close', data: {dismiss: 'alert'}} x
            = flash[key]
      = yield
      %footer{style: 'text-align: center; padding: 50px 0'}
        %p
          = link_to 'phatograph.com', 'http://phatograph.com'
          &copy; 2013.

  = javascript_include_tag "application"
